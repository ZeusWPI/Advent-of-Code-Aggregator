#!/bin/sh
day="$(printf '%02d' "$1")"
part="$2"
inputfile="../inputs/$day-input"

[ -x "prepare" ] || exit 0

if ! ./prepare "$day" "$part" "$inputfile"; then
	echo 'eh ge hebt precies niet alles geÃ¯nstalleerd staan'
else
	if [ -x "run" ]; then
		hyperfine "./run '$day' '$part' '$inputfile'"
	fi
fi

if [ -x "clean" ]; then
	./clean
fi

true
