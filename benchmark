#!/bin/sh
day="$(printf '%02d' "$1")"
part="$2"
inputfile="../inputs/$day-input"

[ -x "prepare" ] || exit 0

if ! ./prepare "$day" "$part" "$inputfile"; then
	echo 'eh ge hebt precies niet alles ge√Ønstalleerd staan'
	exit
fi

[ -x "run" ] || exit 0

hyperfine "./run '$day' '$part' '$inputfile'"

if [ -x "clean" ]; then
	./clean
fi
