#!/bin/sh
day="$(printf '%02d' ${1##0})"
part="$2"
inputfile="$PWD/../inputs/${day}.txt"

[ -x "prepare" ] || exit 0

if ! ./prepare "$day" "$part"; then
	echo 'eh ge hebt precies niet alles ge√Ønstalleerd staan'
else
	if [ -x "run" ]; then
		hyperfine "./run '$day' '$part' '$inputfile'"
	fi
fi

if [ -x "clean" ]; then
	./clean
fi

true
